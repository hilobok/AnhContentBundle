{% extends 'AnhContentBundle:Default:layout.html.twig' %}

{% block title %}{{ resource.title }}{% endblock %}

{% block content %}
    <h1>
        {{ resource.title }}
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ url('anh_content_admin_paper_edit', { 'section': resource.section, 'id': resource.id }) }}">edit</a>
        {% endif %}
    </h1>
    <div class="bbcode">{{ resource.content|raw }}</div>
{% endblock %}

{% block meta %}
    {% if resource.metaAuthor %}
        <meta name="author" content="{{ resource.metaAuthor }}" />
    {% endif %}

    {% if resource.metaDescription %}
        <meta name="description" content="{{ resource.metaDescription }}" />
    {% endif %}

    {% if resource.metaKeywords() %}
        <meta name="keywords" content="{{ resource.metaKeywords }}" />
    {% endif %}
{% endblock %}
