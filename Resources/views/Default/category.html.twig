{% extends '::base.html.twig' %}

{% block body %}
    <h1>{{ category.getTitle() }}</h1>

    {% for document in documents %}
        <div>
            <a href="{{ url('anh_content_' ~ section ~ '_view', { 'section': section, 'slug': document.getSlug() }) }}">{{ document.getTitle() }}</a>
            &middot; {{ document.getPublishedSince()|date(datetime_format) }}
            <div class="preview">
                {{ document.getPreview()|raw }}
            </div>
        </div>
    {% endfor %}
{% endblock %}
