{% extends '::base.html.twig' %}

{% block body %}
    <h1>{{ category.getTitle() }}</h1>

    {% for paper in papers %}
        <div>
            <a href="{{ url('anh_content_' ~ section ~ '_view', { 'section': section, 'slug': paper.getSlug() }) }}">{{ paper.getTitle() }}</a>
            &middot; {{ paper.getPublishedSince()|date }}
            <div class="preview">
                {{ paper.getPreview()|raw }}
            </div>
        </div>
    {% endfor %}
{% endblock %}
