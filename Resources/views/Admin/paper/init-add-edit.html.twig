{% block stylesheets %}
    {% stylesheets
        '@jquery_ui_css'
        '@anh_content_editor_css'
        '@anh_dateTimePicker_css'
        '@anh_taggable_css'
    %}<link rel="stylesheet" href="{{ asset_url }}" />{% endstylesheets %}

    <style>
        .ui-widget { font-size: 13px; z-index: 10 !important; }
        .ui-timepicker-div dl dt { margin-top: 0; }
    </style>
{% endblock %}

{% block javascripts %}
    {% javascripts
        '@jquery_js'
        '@jquery_ui_js'
        '@anh_content_editor_js'
        '@anh_dateTimePicker_js'
        '@anh_taggable_js'
    %}<script src="{{ asset_url }}"></script>{% endjavascripts %}

    <script type="text/javascript">
        $(document).ready(function() {
            var ed = new $.editor({
                textarea: $('.bbcode'),
                tagList: $.parseJSON('{{ tags|json_encode()|raw }}'),
                tagSet: editor_bbcode_tagset,
                uploader: {
                    endpoint: '{{ oneup_uploader_endpoint('anh_content_assets') }}'
                }
            });
        });
    </script>
{% endblock %}
